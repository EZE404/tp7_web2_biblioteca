doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Noticias
    body
        each noticia in noticias
            h3 #{noticia.titulo} / #{noticia.categoria} / #{noticia.fecha}
            img(src=noticia.imagen, alt="imagen" style="display: block;")
            p #{noticia.descripcion}
            hr
            br